{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "pkg/*"
  ],
}
